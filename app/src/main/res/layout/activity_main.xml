<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_HienThi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.1"
            android:background = "@android:color/background_dark"
            android:textColor="@android:color/white"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/txt_KetQua"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.1"
            android:background = "@android:color/background_dark"
            android:textColor="@android:color/white"
            android:textSize="25dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:background="@android:color/background_dark">

            <Button
                android:id="@+id/btn_AC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="AC"
                android:background = "@android:color/background_light"
                android:textSize="20dp"
                android:layout_margin="0.5dp"/>

            <Button
                android:id="@+id/btn_congtru"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="±"
                android:background = "@android:color/background_light"
                android:textSize="29dp"
                android:layout_margin="0.5dp"/>

            <Button
                android:id="@+id/btn_dauphantram"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="%"
                android:background = "@android:color/background_light"
                android:textSize="26dp"
                android:layout_margin="0.5dp"/>

            <Button
                android:id="@+id/btn_dauchia"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="÷"
                android:background = "@android:color/holo_orange_dark"
                android:textSize="29dp"
                android:layout_margin="0.5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:background="@android:color/background_dark">

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="7"
                android:background = "@android:color/background_light"
                android:textSize="25dp"
                android:layout_margin="0.5dp"/>

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="8"
                android:background = "@android:color/background_light"
                android:textSize="25dp"
                android:layout_margin="0.5dp"/>

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="9"
                android:background = "@android:color/background_light"
                android:textSize="25dp"
                android:layout_margin="0.5dp"/>

            <Button
                android:id="@+id/btn_daunhan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="×"
                android:background = "@android:color/holo_orange_dark"
                android:textSize="29dp"
                android:layout_margin="0.5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:background="@android:color/background_dark">

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="4"
                android:background = "@android:color/background_light"
                android:textSize="25dp"
                android:layout_margin="0.5dp"/>

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="5"
                android:background = "@android:color/background_light"
                android:textSize="25dp"
                android:layout_margin="0.5dp"/>

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="6"
                android:background = "@android:color/background_light"
                android:textSize="25dp"
                android:layout_margin="0.5dp"/>

            <Button
                android:id="@+id/btn_dautru"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="-"
                android:background = "@android:color/holo_orange_dark"
                android:textSize="45dp"
                android:layout_margin="0.5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:background="@android:color/background_dark">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="1"
                android:background = "@android:color/background_light"
                android:textSize="25dp"
                android:layout_margin="0.5dp"
                />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="2"
                android:background = "@android:color/background_light"
                android:textSize="25dp"
                android:layout_margin="0.5dp"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="3"
                android:background = "@android:color/background_light"
                android:textSize="25dp"
                android:layout_margin="0.5dp"/>

            <Button
                android:id="@+id/btn_daucong"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="+"
                android:background = "@android:color/holo_orange_dark"
                android:textSize="29dp"
                android:layout_margin="0.5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:background="@android:color/background_dark">

            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:background = "@android:color/background_light"
                android:textSize="25dp"
                android:layout_margin="0.5dp"/>

            <Button
                android:id="@+id/btn_dauphay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text=","
                android:background = "@android:color/background_light"
                android:textSize="30dp"
                android:layout_margin="0.5dp"/>

            <Button
                android:id="@+id/btn_daubang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="="
                android:background = "@android:color/holo_orange_dark"
                android:textSize="29dp"
                android:layout_margin="0.5dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

